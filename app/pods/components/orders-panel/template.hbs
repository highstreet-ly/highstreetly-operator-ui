
      <div class="shadow overflow-hidden border-b border-gray-200">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Order
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Ordered
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Status
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Price
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Type
            </th>
          </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200 text-lg">
          {{#if orders.length}}
            {{#each orders as |order|}}

              <tr>
                <td>
                  <LinkTo @route="u.orders.order" @model={{order.id}} class="p-6 whitespace-nowrap block">{{order.humanReadableId}}</LinkTo>
                </td>

                <td>
                  <LinkTo @route="u.orders.order" @model={{order.id}} class="p-6 whitespace-nowrap block"><TimeAgo @date={{order.confirmedOn}}/></LinkTo>
                </td>

                <td></td>

                <td>
                  <LinkTo @route="u.orders.order" @model={{order.id}} class="px-6 py-4 whitespace-nowrap block">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-200 text-gray-800">
                      {{order.statusText}}
                    </span>
                  </LinkTo>
                </td>

                <td>
                  <LinkTo @route="u.orders.order" @model={{order.id}} class="px-6 py-4 whitespace-nowrap block">
                  {{order.typeText}}
                  </LinkTo>
                </td>
              </tr>
            {{/each}}
          {{/if}}
          </tbody>
        </table>
      </div>


{{yield}}